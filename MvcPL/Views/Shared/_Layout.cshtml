@*User.Identity.IsAuthenticated*@
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Forum</title>
    <!-- Bootstrap CSS -->
    <link href="~/Style/bootstrap.min.css" rel="stylesheet">
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- bootstrap theme -->
    <link href="~/Style/bootstrap-theme.css" rel="stylesheet">
    <!-- external css -->
    <!-- font icon -->
    <link href="~/Style/elegant-icons-style.css" rel="stylesheet" />
    <link href="~/Style/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Style/line-icons.css" rel="stylesheet" />
    <!-- Custom styles -->
    <link href="~/Style/style.css" rel="stylesheet">
    <link href="~/Style/style-responsive.css" rel="stylesheet" />
    <!-- javascripts -->
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/search.js"></script>

</head>
<body>
    <!-- container section start -->
    <section id="container" class="">
        <!--header start-->
        <header class="header dark-bg" id="headera">
            <!--logo start-->
            <a href="/Home/Index" class="logo">Great <span class="lite">Forum</span></a>
            <!--logo end-->

            <div class="nav search-row" id="top_menu">
                <!--  search form start -->
                <ul id="ulS">
                    <li>
                            <input class="form-control" placeholder="Search" type="text" id="search" name="name">
                    </li>
                </ul>
                <div id="divaa"></div>
                <!--  search form end -->
            </div>

            <div class="top-nav notification-row">
               
                            <ul class="nav pull-right top-menu">
     
                                @if (Request.IsAuthenticated)
                                {
                                    if (User.IsInRole("Administrator"))
                                    {
                                        <li id="task_notificatoin_bar" class="dropdown">
                                            <a href="/Management/Main">
                                                <i class="icon-task-l"></i>
                                            </a>
                                        </li>
                                    }
                                    <li id="mail_notificatoin_bar" class="dropdown">
                                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                            <i class="icon-envelope-l"></i>
                                        </a>
                                        <ul class="dropdown-menu extended tasks-bar">
                                            <div class="notify-arrow notify-arrow-blue"></div>
                                        </ul>
                                    </li>
                                    <li class="dropdown">
                                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                            <span class="username">@User.Identity.Name</span>
                                            <b class="caret"></b>
                                        </a>
                                        <ul class="dropdown-menu extended logout">
                                            <div class="log-arrow-up"></div>
                                            <li class="eborder-top">
                                                @Html.ActionLink(" My Profile", "UserOwnProfile", "Profile", routeValues: null, htmlAttributes: new { })
                                            </li>
                                            <div class="log-arrow-up"></div>
                                            <li>
                                                @Html.ActionLink("Log Out", "LogOff", "Account", routeValues: null, htmlAttributes: new { })
                                            </li>
                                        </ul>
                                    </li>
                                }
                                else
                                {
                                    <li id="alert_notificatoin_bar" class="dropdown">
                                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                            <i class="icon_key_alt"></i>
                                        </a>
                                        <ul class="dropdown-menu extended notification">
                                            <li>
                                                @Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
                                            </li>
                                            <li>
                                                @Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })
                                            </li>
                                        </ul>

                                    </li>
                                }

</header>
        <!--header end-->
    </section>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer></footer>
    </div>
</body>
</html>
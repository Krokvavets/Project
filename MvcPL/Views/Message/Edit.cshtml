@model BLL.Interface.Entities.MessageEntity
@using (Html.BeginForm("Edit", "Message", FormMethod.Post,
                                                    new { role = "form", enctype = "multipart/form-data", id = "Editform" }))
{
    @Html.AntiForgeryToken()
        <h4>Edit Profile</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.Footer)
        @Html.HiddenFor(model => model.Note)
        @Html.HiddenFor(model => model.CreationDate)
        @Html.HiddenFor(model => model.Quote)
        @Html.HiddenFor(model => model.TopicId)
        @Html.HiddenFor(model => model.UserId)

        @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control box" } })
        <input type="submit" value="Save" >
  }

